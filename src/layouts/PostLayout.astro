---
import './post.css';
import Layout from './Layout.astro';

// See also content.config.ts
// TODO I think this should come from zod somehow and not get redefined here
interface FrontMatter {
    pageTitle: string;
    title: string;
    slug: string;
    imgSrc: string;
    description: string;
    date: string;
}

const frontmatter: FrontMatter = Astro.props.frontmatter;
---

<Layout title={frontmatter.pageTitle}>
    <h1>{frontmatter.title}</h1>
    <p class="text-sm text-gray-500 font-mono tracking-wide text-right">{frontmatter.date}</p>
    <br />
    <br />
    <slot />
</Layout>
