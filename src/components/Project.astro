---
import CoolMeter from './CoolMeter.astro';

interface Props {
    title: string;
    imgSrc: string;
    href: string;
    description: string;
    rating: 1 | 2 | 3 | 4 | 5; // coolness rating
    reason: string; // coolness reason
}

const { title, imgSrc, href, description, rating, reason } = Astro.props;
---

<li class="rounded-md overflow-hidden hover:brightness-125 max-w-sm bg-[var(--color-surface)] shadow-lg list-none transition-all duration-100">
    <a href={href} target="_blank" class="block no-underline p-5">
        <h3 class="text-lg font-semibold mb-2 text-white p-1">{title}</h3>
        <CoolMeter class="p-1" rating={rating} description={reason} />
        <img src={imgSrc} alt={title} class="w-full h-48 object-cover p-1" />
        <p class="text-gray-400 text-sm p-1">{description}</p>
    </a>
</li>
