---
interface Props {
    title: string;
    imgSrc: string;
    href: string;
    description: string;
}

const { title, imgSrc, href, description } = Astro.props;
---

<li class="rounded-md overflow-hidden max-w-sm bg-black list-none">
  <img src={imgSrc} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="text-lg font-semibold mb-2">
      <a href={href} class="hover:underline" target="_blank">{title}</a>
    </h3>
    <p class="text-gray-600 text-sm">{description}</p>
  </div>
</li>
