---
interface Props {
    href: string;
    color: string;
    src: string;
    alt: string;
}

const { href, color, src, alt } = Astro.props;
---

<a href={href} target="_blank" class="rounded-full" style=`width: 44px; height: 44px; margin: 9px; background-color: ${color};`>
    <img src={src} alt={alt} style="width: 44px; height: 44px;" width="44" height="44" />
</a>
