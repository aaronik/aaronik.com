---
interface Props {
    title: string;
    imgSrc: string;
    href: string;
    description: string;
}

const { title, imgSrc, href, description } = Astro.props;
---

<li class="rounded-md overflow-hidden hover:brightness-125 max-w-sm bg-gray-800 shadow-lg list-none transition-all duration-100">
    <a href={href} class="block no-underline p-5">
        <h3 class="text-lg font-semibold mb-2 text-white p-1">{title}</h3>
        <img src={imgSrc} alt={title} class="w-full h-48 object-cover p-1" />
        <p class="text-gray-400 text-sm p-2 mt-4">{description}</p>
    </a>
</li>
